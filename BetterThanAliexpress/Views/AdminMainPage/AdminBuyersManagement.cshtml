@{
    Layout = null;
}

@model List<DataBase.Buyer>

<table>
    <thead>
    <tr>
        <th>Id</th>
        <th>Login</th>
        <th>Password</th>
        <th>Name</th>
        <th>Surname</th>
        <th>Date Of Birthday</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var buyer in Model)
    {
        <tr>
            <td>@buyer.Id.ToString()</td>
            <td>@buyer.Login</td>
            <td>@buyer.Password</td>
            <td>@buyer.Name</td>
            <td>@buyer.Surname</td>
            <td>@buyer.DateOfBirthday.ToShortDateString()</td>
            <td>@buyer.Email</td>
            <td>@buyer.PhoneNumber</td>

            <td>
                <form asp-controller="AdminMainPage" asp-action="DeleteBuyer" asp-route-id="@buyer.Id" method="post">
                    <button type="submit">Удалить</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>